{
  "name": "masptools",
  "main": "electron/main.js",
  "description": "Masp Tools",
  "author": "Scanteq",
  "homepage": "./",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@tsparticles/react": "^3.0.0",
    "axios": "^1.7.2",
    "docx": "^8.5.0",
    "electron-updater": "^6.3.9",
    "file-saver": "^2.0.5",
    "immutability-helper": "^3.1.1",
    "ini": "^5.0.0",
    "jspdf": "^2.5.2",
    "jspdf-autotable": "^3.8.4",
    "papaparse": "^5.4.1",
    "react": "^18.3.1",
    "react-color": "^2.19.3",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.3.0",
    "react-konva": "^19.0.0",
    "react-particles": "^2.12.2",
    "react-router": "^6.25.1",
    "react-router-dom": "^6.25.1",
    "react-scripts": "5.0.1",
    "react-window": "^1.8.11",
    "serve": "^14.2.3",
    "styled-components": "^6.1.12",
    "tsparticles": "^3.5.0",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && electron-builder",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "dev:config": "cross-env NODE_ENV=development concurrently \"npm start\" \"wait-on http://localhost:3000 && electron . --path=\\\"C:\\Sabelt\\Aston Martin\\Collaudo\\\" --app=config\"",
    "dev:report": "cross-env NODE_ENV=development concurrently \"npm start\" \"wait-on http://localhost:3000 && electron . --path=\\\"C:\\Sabelt\\Aston Martin\\Collaudo\\\" --app=report\"",
    "dist": "electron-builder"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "docdash": "^2.0.2",
    "electron": "^33.2.0",
    "electron-builder": "^23.6.0",
    "minami": "^1.2.3",
    "taffydb": "^2.7.3",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.masp.tools",
    "productName": "MaspTools",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "electron/main.js",
      "electron/updater.js",
      "electron/filehandler.js",
      "electron/reporthandler.js",
      "electron/preload.js",
      "server/**/*"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "compression": "maximum",
    "publish": [
      {
        "provider": "github",
        "repo": "MaspConfig",
        "owner": "cosmin-stoica",
        "releaseType": "draft"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "electron/assets/logo.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": false,
      "perMachine": true,
      "installerIcon": "electron/assets/logo.ico",
      "uninstallerIcon": "electron/assets/logo.ico",
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": false,
      "include": "installer.nsh"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
